<Page x:Class="HexaEngineCreationKit.UIElements.Pages.PluginCreator"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:HexaEngineCreationKit.UIElements.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PluginCreator">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel x:Name="References" Grid.Row="1" />
        <StackPanel x:Name="Scripts" Grid.Column="1" Grid.Row="1" />
        <Button Content="Save" HorizontalAlignment="Left" Margin="0" Click="Button_Save_Click" />
        <Button Content="Load" Grid.Column="1" HorizontalAlignment="Left" Click="Button_Load_Click" />
    </Grid>
</Page>