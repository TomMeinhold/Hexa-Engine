<Window x:Class="HexaEngineCreationKit.UIElements.Windows.VirtualPathWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HexaEngineCreationKit.UIElements.Windows"
        mc:Ignorable="d"
        Title="" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Button Content="Ok" Margin="10" Grid.Row="1" Click="Button_Click" />
        <TextBox x:Name="Path" Margin="10" TextWrapping="Wrap" Text="" Grid.ColumnSpan="2" />
    </Grid>
</Window>