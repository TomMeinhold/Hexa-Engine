<UserControl x:Class="HexaEngineCreationKit.UIElements.Controls.VirtualPathFileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HexaEngineCreationKit.UIElements.Controls"
             mc:Ignorable="d">
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Remove" Click="MenuItem_Click" />
        </ContextMenu>
    </UserControl.ContextMenu>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBox x:Name="VirualPath" TextWrapping="Wrap" TextChanged="VirualPath_TextChanged" Margin="10,0" />
        <TextBox x:Name="FilePath" TextWrapping="Wrap" Grid.Column="1" TextChanged="FilePath_TextChanged" MouseDown="FilePath_MouseDown" Margin="10,0" />
    </Grid>
</UserControl>